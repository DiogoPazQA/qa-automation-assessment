{
  "name": "qa-automation-assessment",
  "version": "1.0.0",
  "description": "Projeto de avaliação QA com Playwright (E2E + API) e K6 (Performance).",
  "scripts": {
    "test:e2e": "npx playwright test tests/e2e --reporter=html",
    "test:api": "npx playwright test tests/api --reporter=html",
    "test:perf": "k6 run tests/performance/load_test.js",
    "start:api": "json-server --watch db.json --port 3000"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "json-server": "^1.0.0-beta.3"
  }
}
